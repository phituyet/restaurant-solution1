<div class="container container__first">
  <h1 class="text-center">Place New Order</h1>
  <div class="row">
    <div class="col-md-6">
      <h3 class="heading__form">Items</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Item</th>
            <th class="text-right">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @food_items.each do |food_item| %>
            <%= render 'cart_item', food_item: food_item %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td>Delivery</td>
            <td class="text-right"><span class="price">$20,000</td>
          </tr>
          <tr>
            <td><strong>Total</strong></td>
            <td class="text-right"><span class="price"><%= number_to_currency(@food_items.map{|item| item.price}.sum + 20000, precision: 0, unit: 'Ä‘') %></span></td>
          </tr>
        </tfoot>
      </table>
    </div>
    <div class="col-md-6">
      <h3 class="heading__form">Order Information</h3>
      <%= render 'form', order: @order, food_items: @food_items %>
    </div>
  </div>
</div>
<% debug session[:cart] %>
<% debug @food_items %>
